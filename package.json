{
  "name": "vite-plugin-minify-css-strings",
  "version": "1.1.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "author": "lindi0v",
  "license": "CC0-1.0",
  "description": "Vite plugin that minifies CSS inside template literals marked with /* css */ at build time",
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "vite": ">=4"
  },
  "dependencies": {
    "lightningcss": "^1.30.1",
    "magic-string": "^0.30.19",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.5.1",
    "tsup": "^8.4.0",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
